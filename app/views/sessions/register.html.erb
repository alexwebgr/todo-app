<h3>Register</h3>
<%= form_with(model: User.new, url: sessions_do_register_path, remote: true) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', placeholder: :email, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: 'form-control', placeholder: :full_name, required: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Register', class: 'btn btn-primary' %>
  </div>
<% end %>
